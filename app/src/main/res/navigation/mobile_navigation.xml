<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.nodes.movies.ui.search.SearchMoviesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/movies_list_fragment" />

    <fragment
        android:id="@+id/navigation_fav"
        android:name="com.nodes.movies.ui.favorites.FavouritesMoviesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/movies_list_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.nodes.movies.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>